{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "jsx": "react",
    "target": "es5",
    "outDir": "lib",
    "strict": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": ["src"]
}
